pipeline {
    agent any
    environment {
        DOCKER_HUB_CREDS = credentials('wsjung0516-docker-hub')
        AWS_CREDS = credentials('wsjung0516-aws-creds')
    }

    stages {
        stage('Hello') {
            steps {
                sh ''' 
                 aws --version
                 aws docker compose --version
                '''
            }
        }
        stage('Build') {
            steps {
                sh 'docker context use default' 
                sh 'docker conpose build'
                sh 'docker compose push'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker context use myecscontext' 
                sh 'docker conpose up'
                sh 'docker compose ps --format json'
            }
        }
    }
}
